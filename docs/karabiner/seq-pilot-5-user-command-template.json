        },
        {
          "type": "basic",
          "from": {
            "key_code": "f17",
            "modifiers": {
              "mandatory": ["right_command", "right_option"]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "seq_transport_mode",
              "value": 1
            }
          ],
          "to": [
            {
              "send_user_command": {
                "json": { "v": 1, "type": "run", "name": "open: Spotify (or search)" }
              }
            }
          ]
        }
      ]
    }
  ]
}
